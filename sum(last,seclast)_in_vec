#include <iostream>
#include<algorithm>
#include<vector>
using namespace std;
int main() {
    // Write C++ code here
    int n,val,a,b;
    vector<int> v;
    cin>>n;
    for(int i=0;i<n;i++){
    cin>>val;
    v.push_back(val);
    }
   std::sort(v.begin(),v.end());
   a=v[n-1];
   b=v[n-2];
   int c=a+b;
   cout<<c;
    return 0;
}
